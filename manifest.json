{
  "name": "hightlight",
  "description": "code hightlight for Chorme",
  "version": "0.1",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html",
  "browser_action": {
    "default_title": "hightlight",
    "default_icon": "hightlight-48.png"
  },
  "permissions" : [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}